{
  "remote.extensionKind": {
    // built-in をホスト側で動かす（Markdown: Open Preview 用）
    "ms-vscode.markdown-language-features": ["ui"],
    // 追加した 2 つもホストで動かす
    "yzhang.markdown-all-in-one": ["ui"],
    "shd101wyy.markdown-preview-enhanced": ["ui"]
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#599f0b",
    "activityBar.background": "#599f0b",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#a6d1f9",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#599f0b",
    "statusBar.background": "#3e6f08",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#599f0b",
    "statusBarItem.remoteBackground": "#3e6f08",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#3e6f08",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#3e6f0899",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#3e6f08",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.expo/**": true,
    "**/coverage/**": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.expo/**": true,
    "**/coverage/**": true
  }
}
